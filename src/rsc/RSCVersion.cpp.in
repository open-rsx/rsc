#include "RSCVersion.h"

#include <sstream>

using namespace std;

namespace rsc {

unsigned int RSCVersion::major() {
	return RSC_VERSION_MAJOR;
}

unsigned int RSCVersion::minor() {
	return RSC_VERSION_MINOR;
}

unsigned int RSCVersion::patch() {
	return RSC_VERSION_PATCH;
}

unsigned int RSCVersion::numeric() {
	return RSC_VERSION_NUMERIC;
}

string RSCVersion::string() {
	ostringstream ss;
	ss << major() << '.' << minor() << '.' << patch();
	return ss.str();
}

unsigned int RSCVersion::abi() {
	return RSC_ABI_VERSION;
}

string RSCVersion::buildId() {
	return "@RSC_WC_REVISION@";
}

string RSCVersion::buildDate() {
	return "@RSC_WC_LAST_CHANGED_DATE@";
}

string RSCVersion::buildString() {
	ostringstream ss;
	ss << buildId() << " (DATE " << buildDate() << ")";
	return ss.str();
}

}
