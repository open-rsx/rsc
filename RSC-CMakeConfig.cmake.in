IF(NOT RSC_CMAKE_CONFIG_PROCESSED)
    SET(RSC_CMAKE_CONFIG_PROCESSED TRUE)

    GET_FILENAME_COMPONENT(RSC_CMAKE_CONFIG_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

    IF(EXISTS "${RSC_CMAKE_CONFIG_DIR}/CMakeCache.txt")
        SET(RSC_CMAKE_MODULE_PATH "@CMAKE_SOURCE_DIR@/cmake/Modules")
        SET(RSC_CMAKE_TOOLCHAINS_PATH "@CMAKE_SOURCE_DIR@/cmake/Toolchains")
    ELSE()
        SET(RSC_CMAKE_MODULE_PATH "${RSC_CMAKE_CONFIG_DIR}/../../@RSC_CMAKE_MODULE_PATH@")
        SET(RSC_CMAKE_TOOLCHAINS_PATH "${RSC_CMAKE_CONFIG_DIR}/../../@RSC_CMAKE_TOOLCHAIN_PATH@")
    ENDIF()

ENDIF()
